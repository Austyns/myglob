<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="4sp"
    android:stretchColumns="*"
    >

    <!-- 2 columns -->
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_invoice_num_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@string/text_invoice_num"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/tv_invoice_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="6dp"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </TableRow>
    <!-- 2 columns -->

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_invoice_date_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@string/text_invoice_date"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/tv_invoice_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="6dp"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </TableRow>
    <!-- 2 columns -->

	<!-- COSTS ////////////////////////////////////////////////////////////-->
	
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_invoice_services_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@string/text_invoice_services"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/tv_invoice_services"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="6dp"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </TableRow>
    <!-- 2 columns -->
    	
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_invoice_fixed_charge_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@string/text_invoice_fixed_charge"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/tv_invoice_fixed_charge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="6dp"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </TableRow>
    <!-- 2 columns -->
    
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_invoice_discount_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@string/text_invoice_discount"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/tv_invoice_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="6dp"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </TableRow>
    <!-- 2 columns -->    

	<!-- TOTALS ////////////////////////////////////////////////////////////-->
    <TableRow
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >
        <View
            android:id="@+id/v_repo_divider"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_span="2"
            android:background="#ff0099cc" />
    </TableRow>
    <!-- 2 columns -->
    
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_invoice_tot_no_vat_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@string/text_tot_no_vat"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/tv_invoice_tot_no_vat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="6dp"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </TableRow>
    <!-- 2 columns -->
    
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_invoice_vat_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@string/text_vat"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/tv_invoice_vat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="6dp"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </TableRow>
    <!-- 2 columns -->        
    
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_invoice_totvat_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@string/text_tot_vat"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/tv_invoice_totvat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="6dp"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </TableRow>
    <!-- 2 columns -->    
    
	<!-- PREVIOUS PAYMENTS ////////////////////////////////////////////////////////////-->
    <TableRow
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >
        <View
            android:id="@+id/v_repo_divider2"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_span="2"
            android:background="#ff0099cc" />
    </TableRow>
    <!-- 2 columns -->    
    
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_invoice_prev_amountdue_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@string/text_invoice_prev_amountdue"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/tv_invoice_prev_amountdue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="6dp"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </TableRow>
    <!-- 2 columns -->
    
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_invoice_paied_amountdue_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@string/text_invoice_paid_amountdue"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/tv_invoice_paied_amountdue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="6dp"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </TableRow>
    <!-- 2 columns -->    
    
    <TableRow
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >
        <View
            android:id="@+id/v_repo_divider3"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_span="2"
            android:background="#ff0099cc" />
    </TableRow>
    <!-- 2 columns -->       
    
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_invoice_total_dueamount_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@string/text_invoice_total_dueamount"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/tv_invoice_total_dueamount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="6dp"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </TableRow>
    <!-- 2 columns -->           

</TableLayout>